@model MusicRising.Models.ShowVM

@{
    ViewData["Title"] = "Edit Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_EntityEdit", new MusicRising.Models.EntityEditVM
{
    Id = Model.ShowId,
    IdentityUserId = Model.Venue.IdentityUserId,
    Name = Model.HeadLiner.BandName ?? "Show",
    PictureUrl = Model.PromoLink,
    Location = Model.Venue.Location,
    Genre = Model.Genre,
    IsOwner = Model.IsVenueOwner
})