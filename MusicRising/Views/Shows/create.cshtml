@model MusicRising.Models.Show
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> userManager


@{
    ViewData["Title"] = "Book a show";
}

<h1>Book show</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="ShowId" class ="form-control" asp-items="ViewBag.Id"></input>
            </div>
            <div class="form-group" >
                <input type="hidden" asp-for="VenueId" class ="form-control" asp-items="ViewBag.VenueId"></input>
            </div>
            <div class="form-group" >
                <input  type="hidden"asp-for="BandId" class ="form-control" asp-items="ViewBag.BandId"></input>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label">Genre</label>
                <select asp-for="Genre" class="form-control"></select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Date</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShowFee" class="control-label">Payment</label>
                <input asp-for="ShowFee" class="form-control" />
                <span asp-validation-for="ShowFee" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

