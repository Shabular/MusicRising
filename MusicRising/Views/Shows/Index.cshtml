@using System.Globalization
@using MusicRising.Data.Services
@model List<MusicRising.Models.Show>

@{
    ViewData["Title"] = "Index";
}

<h1>Comming Shows</h1>

@foreach (var Show in Model)
{
    <div class="container" style="background-color: rgba(138,129,0.6); margin-top: 50px; margin-bottom: 50px; padding: 20px; border-radius: 10px;">
        <div class="row">
            <div class="col col-xs-6 col-lg-5">
                <img src="~/Images/@Show.PromoLink" style="max-width: 400px; max-height: 400px;">
            </div>
            <div class="col col-xs-6 col-lg-5">
                <h5><a asp-action="Details" asp-route-id="@Show.ShowId" style="color: black"></a></h5>
                <div>Watch: $@Show.HeadLiner</div>
                <div>At: $@Show.Venue</div>
                <div>@Show.Date.ToString(CultureInfo.InvariantCulture)</div>
            </div>
            
        </div>
    </div>
    
}

@if (!Model.Any())
{
    <p>No shows are scheduled jet</p>
}