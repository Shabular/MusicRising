@model MusicRising.Models.Show

@{
ViewData["Title"] = "Delete Show";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Show</h1>

<div>
    <h4>Are you sure you want to delete this show?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Headliner Band
        </dt>
        <dd class="col-sm-10">
            @Model.HeadLiner.BandName
        </dd>
        <dt class="col-sm-2">
            Venue
        </dt>
        <dd class="col-sm-10">
            @Model.Venue.VenueName
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Model.Genre
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ShowId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
