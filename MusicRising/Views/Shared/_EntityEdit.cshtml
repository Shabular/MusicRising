@using Microsoft.AspNetCore.Mvc.TagHelpers
@using MusicRising.Helpers
@model MusicRising.Models.EntityEditVM

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3>Edit @ViewBag.Title</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="hidden" asp-for="IdentityUserId" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="PictureUrl" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Picture" class="control-label">Picture</label>
                    <input asp-for="Picture" class="form-control" type="file" accept="image/*" />
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label">Location</label>
                    <select asp-for="Location" class="form-control" asp-items="Html.GetEnumSelectList<LocationEnum>()"></select>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Genre" class="control-label">Genre</label>
                    <select asp-for="Genre" class="form-control" asp-items="Html.GetEnumSelectList<GenreEnum>()"></select>
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
            @if (Model.IsOwner)
            {
            <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger mt-3">Delete</button>
            </form>
            }
        </div>
    </div>
</div>
