@model dynamic

<div class="card mb-4" style="display: flex; flex-direction: row; width: 100%; height: 180px;">
    <div style="flex: 1;">
        <img class="card-img-left" src="~/Images/@Model.ImageUrl" alt="Card image cap" style="height: 100%; width: 100%; object-fit: cover; border-radius: 0;">
    </div>
    <div class="card-body" style="flex: 2; display: flex; flex-direction: column; justify-content: space-between;">
        <div>
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Description</p>
        </div>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary align-self-start">View Details</a>
    </div>
</div>